---
const { t, lang = 'th' } = Astro.props;
const links = [
  { title: t.nav.home, link: `/${lang}` },
  { title: t.nav.about, link: `/${lang}#about` },
  { title: t.nav.products, link: `/${lang}/products` },
  { title: t.nav.contact, link: `/${lang}/contact` },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-info">
        <p class="company">üìç {t.contact.companyName}</p>
        <p>{t.contact.address}</p>
        <p>üìû 02-123-4567</p>
        <p>üí¨ LINE: @96materials</p>
        <p>üåê facebook.com/96materials</p>
      </div>

      <div class="footer-links">
        {links.map((item) => (
          <a href={item.link}>{item.title}</a>
        ))}
      </div>
    </div>
    <div class="footer-bottom">
      <p>¬© 2025 96 MATERIALS CO., LTD. {t.footer.rights}</p>
